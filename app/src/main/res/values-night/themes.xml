<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.CaseApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_light</item>
        <item name="colorPrimaryVariant">@color/primary</item>
        <item name="colorOnPrimary">@color/black</item>
        
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/accent</item>
        <item name="colorSecondaryVariant">@color/accent</item>
        <item name="colorOnSecondary">@color/black</item>
        
        <!-- Background colors -->
        <item name="android:colorBackground">@color/background_dark</item>
        <item name="colorSurface">@color/surface_dark</item>
        <item name="colorOnBackground">@color/on_background_dark</item>
        <item name="colorOnSurface">@color/on_surface_dark</item>
        
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        
        <!-- Text appearance -->
        <item name="textAppearanceHeadline5">@style/TextAppearance.CaseApp.Headline5.Dark</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.CaseApp.Subtitle1.Dark</item>
        <item name="textAppearanceBody1">@style/TextAppearance.CaseApp.Body1.Dark</item>
        <item name="textAppearanceBody2">@style/TextAppearance.CaseApp.Body2.Dark</item>
        <item name="textAppearanceCaption">@style/TextAppearance.CaseApp.Caption.Dark</item>
    </style>

    <!-- Text styles for dark theme -->
    <style name="TextAppearance.CaseApp.Headline5.Dark" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextAppearance.CaseApp.Subtitle1.Dark" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextAppearance.CaseApp.Body1.Dark" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextAppearance.CaseApp.Body2.Dark" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#B3FFFFFF</item>
    </style>

    <style name="TextAppearance.CaseApp.Caption.Dark" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#B3FFFFFF</item>
    </style>

    <!-- Login theme -->
    <style name="Theme.CaseApp.NoActionBar" parent="Theme.CaseApp">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@color/background_dark</item>
    </style>
</resources>