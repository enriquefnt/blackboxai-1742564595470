<?xml version="1.0" encoding="utf-8"?>
<data-extraction-rules>
    <cloud-backup>
        <!-- Incluir la base de datos Room -->
        <include domain="database" path="." />
        <!-- Incluir las preferencias compartidas -->
        <include domain="sharedpref" path="." />
        <!-- Excluir archivos temporales -->
        <exclude domain="file" path="temp"/>
    </cloud-backup>
    <device-transfer>
        <!-- Incluir la base de datos Room -->
        <include domain="database" path="." />
        <!-- Incluir las preferencias compartidas -->
        <include domain="sharedpref" path="." />
        <!-- Excluir archivos temporales -->
        <exclude domain="file" path="temp"/>
    </device-transfer>
</data-extraction-rules>